<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/emoji_view_root"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <android.support.constraint.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="200dp"
        tools:background="@android:color/holo_blue_bright">

        <View
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:background="@drawable/emoji_default_background_drawable"
            app:layout_constraintStart_toStartOf="@+id/emoji_container"
            app:layout_constraintEnd_toEndOf="@+id/emoji_container"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="50dp"
            />

        <LinearLayout
            android:id="@+id/emoji_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="100dp"
            android:orientation="horizontal"
            android:background="@android:color/transparent"
            android:gravity="bottom"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="50dp"
            tools:layout_width="200dp"
            tools:layout_height="200dp">

        </LinearLayout>



    </android.support.constraint.ConstraintLayout>

</RelativeLayout>